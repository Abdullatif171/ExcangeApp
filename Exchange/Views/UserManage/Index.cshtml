@model IEnumerable<Users>

<a class="btn btn-outline-primary" asp-action="AddUser">Kllanıcı Ekle</a>
<hr>
<table class="table table-sm table-bordered bg-white ">
    <thead>
        <tr>
            <th>Resim</th>
            <th>Id</th>
            <th>isim</th>
            <th>Soyisim</th>
            <th>Telefon</th>
            <th>Email</th>
            <th style="width: 200px;"></th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Count() == 0)
        {
            <tr><td colspan="4" class="text-center">User Yok</td></tr>
        }
        @foreach(var user in Model)
        {
            <tr>
                <td> <img style="width: 80px;" src="img/@user.Image" alt=""> </td>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Surname</td>
                <td>@user.PhoneNumber</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="UserEdit" asp-route-id="@user.Id" class="btn btn-outline-primary btn-sm">Güncelle</a>
                    <form asp-action="Delete" method="post" onsubmit="return confirm('emin misiniz')" style="display: inline-block;">
                        <input type="hidden" value="@user.Id" name="id">
                        <button type="submit" class="btn btn-outline-danger btn-sm">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>