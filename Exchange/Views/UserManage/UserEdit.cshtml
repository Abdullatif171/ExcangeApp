@model EditViewModel

<div class="d-flex justify-content-center">
    <div style="min-width: 500px; min-height: 300px;">
        <h3 style="text-align: start;">Kulanıcı güncelle</h3>
        <div class="bg-white p-4">
            <form asp-action="UserEdit" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" name="Id" value="@Model.Id">
                <div class="row">
                    <div class="col">
                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control" placeholder="Name">
                            <label asp-for="Name"></label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating mb-3">
                            <input asp-for="Surname" class="form-control" placeholder="Surname">
                            <label asp-for="Surname"></label>
                        </div>
                    </div>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="UserName" class="form-control" placeholder="UserName">
                    <label asp-for="UserName"></label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Phone" class="form-control" placeholder="(000) 000 00 00">
                    <label asp-for="Phone"></label>
                </div>
                <div class="form-floating mb-3" form-floating"">
                    <input asp-for="Email" class="form-control" placeholder="name@example.com">
                    <label asp-for="Email"></label>
                </div>
                <div class="card">
                    <div class="card-header">
                        <h6>Şifre</h6>
                    </div>
                    <div class="card-body">
                        <div class="col">
                            <div class="form-floating mb-3">
                                <input asp-for="Password" class="form-control">
                                <label asp-for="Password"></label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-floating mb-3">
                                <input asp-for="ConfirmPassword" class="form-control">
                                <label asp-for="ConfirmPassword"></label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        Roller
                    </div>
                    <div class="card-body">
                            @foreach (var role in ViewBag.Roles)
                            {
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" name="SelectRole" value="@role"
                                        id="@role" @if(Model.SelectRole != null)
                                        {
                                            @(Model.SelectRole.Any(i => i == role) ? "checked": "")
                                        } >
                                    <label for="@role" class="form-check-label">@role</label>
                                </div>
                            }
                    </div>
                </div>
                <button type="submit" class="btn btn-primary w-100 py-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>
