@model Products

<div class="row">
    <div class="col-lg-12">
        <div class="row bg-white p-4">
            <div class="col-lg-6">
                <img src="~/img/@Model.Image" class="img-fluid rounded " alt="">
            </div>
            <div class="col-lg-6">
                <h1 class="h4 mb-4">@Model.Title</h1>
                <div class="tags">
                    @foreach (var tag in Model.Tags)
                    {
                        <a href="/CategoriesList/@tag.Url" class="badge bg-primary bg-opacity-10 mb-2 fw-bold">@tag.Text</a>
                    }
                </div>

                <ul class="list-inline my-3">
                    <li class="list-inline-item"><i class="bi bi-person-circle"></i><a href="#"><b>Satıcı Kimliği: </b>
                            @Model.User.UserName</a></li>
                </ul>
                <hr>
                <div>@Html.Raw(@Model.Description)</div>
            </div>
        </div>
        <div class="bg-white mt-3">
            <div class="card border-0">
                <div class="card-header pb-0">
                    <h4><span id="commentCount">@Model.Comment.Count()</span> adet yorum</h4>
                </div>
                <div class="card-body">
                    <div id="comments">
                        @if(Model.Comment != null){
                        @foreach(var comment in Model.Comment)
                        {
                            <div class="my-4 d-flex">
                                <img src="img/@comment.User.Image" alt="" class="avatar rounded-circle float-start me-3">
                                <div>
                                    <div class="mb-2 d-flex">
                                        <h6 class="me-2">
                                        <a href="/profile/@comment.User.UserName">@comment.User.Name</a>
                                        </h6>
                                        <small>@comment.PublishedOn.ToString("G")</small>
                                    </div>
                                    <p>@comment.Text</p>
                                </div>
                            </div>
                        }
                        }
                    </div>

                    @if(User.Identity!.IsAuthenticated)
                    {
                        <hr class="my-4">
                        <div>
                            <h4 class="mb-3">Yorum Ekle</h4>
                            <form asp-action="AddComment" method="post">
                                <input type="hidden" id="PostId" name="PostId" value="@Model.ProductId">
                                <div class="mb-3">
                                    <label for="Text" class="form-label">Yorum</label>
                                    <textarea type="text" name="Text" id="Text" rows="3" class="form-control"></textarea>
                                </div>
                                <div class="mb-3">
                                    <button id="btnYorumKayit" type="submit" class="btn btn-primary">Kaydet</button>
                                </div>
                            </form>
                        </div>
                    }
                    else
                    {
                        <p>Yorum için uygulamaya giriş yapmalısınız. <a href="/users/login">Login</a></p>
                    }
                   
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function() {

            $("#btnYorumKayit").click(function() {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("AddComment")',
                    dataType: 'json',
                    data: {
                        PostId: $('#PostId').val(),
                        UserName: $('#UserName').val(),
                        Text: $('#Text').val(),
                    },
                    success: function(yorum) {
                        console.log(yorum);
                        var date = new Date(yorum.publishedOn);

                        $("#comments").append(`
                            <div class="my-4 d-flex">
                                <img src="/img/${yorum.avatar}" alt="" class="avatar rounded-circle float-start me-3">
                                <div>
                                    <div class="mb-2 d-flex">
                                        <h6 class="me-2">${yorum.username}</h6>
                                        <small>${date.toLocaleDateString()}</small>
                                    </div>
                                    <p>${yorum.text}</p>
                                </div>
                            </div>
                        `);

                        $("#UserName").val('');
                        $("#Text").val('');

                        var adet = parseInt($("#commentCount").text());
                        $("#commentCount").text(adet + 1);
                    }
                });

                return false;
            });

        });
    </script>
}