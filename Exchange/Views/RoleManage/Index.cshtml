@model IEnumerable<UsersRole>

<a class="btn btn-outline-primary" asp-action="AddRole">Rol Ekle</a>
<hr>
<table class="table table-sm table-bordered">
    <tr>
        <th>Id</th>
        <th>Role Adı</th>
        <th>Kullanıcılar</th>
        <th style="width: 200px;"></th>
    </tr>

    @if(Model.Count() == 0)
    {
        <tr><td colspan="4" class="text-center">Role Yok</td></tr>
    }

    @foreach(var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td asp-for-users="@role.Id"></td>
            <td>
                <a asp-action="RoleEdit" asp-route-id="@role.Id" class="btn btn-outline-primary btn-sm">Güncelle</a>
                    <form asp-action="Delete" method="post" onsubmit="return confirm('emin misiniz')" style="display: inline-block;">
                        <input type="hidden" value="@role.Id" name="id">
                        <button type="submit" class="btn btn-outline-danger btn-sm">Sil</button>
                    </form>
            </td>
        </tr>
    }

</table>