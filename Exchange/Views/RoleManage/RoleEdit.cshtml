@model UsersRole

<div class="d-flex justify-content-center">
    <div style="min-width: 500px; min-height: 250px;">
        <h3 style="text-align: start;">Role Güncelle</h3>
        <div class="bg-white p-4">
            <form asp-action="RoleEdit" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input name="Id" type="hidden" value="@Model.Id">
                <div class="mb-3">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary w-100 py-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>

<hr>
<table class="bg-white table table-sm table-bordered">
    <thead>
        <tr>
            <th>Resim</th>
            <th>Id</th>
            <th>isim</th>
            <th>Soyisim</th>
            <th>Telefon</th>
            <th>Email</th>
            <th style="width: 150px;"></th>
        </tr>
    </thead>
    <tbody>
        @if(ViewBag.Users != null){
        @if(ViewBag.Users.Count == 0)
        {
            <tr><td colspan="4" class="text-center">Kullanıcı Yok</td></tr>
        }
        @foreach(var user in ViewBag.Users)
        {
            <tr>
                <td> <img style="width: 80px;" src="img/@user.Image" alt=""> </td>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Surname</td>
                <td>@user.PhoneNumber</td>
                <td>@user.Email</td>
                <td>
                    <a asp-controller="UserManage" asp-action="UserEdit" asp-route-id="@user.Id" class="btn btn-outline-primary btn-sm">Güncelle</a>
                </td>
            </tr>
        }
        }
        
    </tbody>
</table>