@model Product

<div class="row me-auto mt-4">
    <div class="col-md-4 border images mx-3 my-2">
        <img class="rounded shadow" style="width: 100%; height: auto;" src="@Model.ImageUrl">
    </div>
    <div class="col-md-7 rounded shadow mx-3 my-2" style="background-color: rgb(250, 250, 250);">
        <div class=" m-3">
            <div style="display: flex; align-items: end;">
                <h2>@Model.ProductName</h2>
            </div>
            <div class="d-flex">
                <div class="p-2 flex-shrink-1" style="display: flex;">
                    <div class="rating">
                        @for (int i = 0; i < 5; i++)
                        {
                            if (i < Model.Rating)
                            {
                                <i class="fa-solid fa-star" style="width: 12px; color: yellow;"></i>
                            }
                            else
                            {
                                <i class="fa-regular fa-star" style="width: 12px;"></i>
                            }
                        }
                    </div>
                    <p>(@Model.Rating)</p>
                </div>
                <div class="p-2 flex-fill">
                    <a href="#" style="text-decoration: none; color: rgb(150, 50, 250);">(513) Değerlendirme</a>
                </div>
            </div>
            <div>
                @if (Model.ExchangeStatus == true)
                {
                    <h5 class="card-text my-3" style="color: rgb(150, 50, 250);">Tercih Edilen ürün : @Model.ExcangeCategory
                    </h5>
                    <h6 class="card-text my-2" style="color: rgb(150, 100, 255);">@Model.Price TL</h6>
                }
                else
                {
                    <h5 class="card-text" style="color: rgb(150, 50, 250);">@Model.Price TL</h5>
                }
            </div>
            <hr>
            <h6>Renk:</h6>
            <div class="row my-2">
                <a href="#" class="m-2 dif-color border">
                </a>
                <a href="#" class="m-2 dif-color border">
                </a>
                <a href="#" class="m-2 dif-color border">
                </a>
            </div>
            <div>
                <h6>Öne Çıkan Özellikler:</h6>
                <p>@Model.Summary</p>
            </div>
        </div>
    </div>
</div>
<h4 class="m-3">Ürün Değerlendirmeleri</h4>
<div class="col-md-11 rounded shadow " style="background-color: rgb(250, 250, 250);">
    <div class="p-5">
        <p>@Model.Summary</p>
    </div>
</div>
<h4 class="m-3">Ürün Soru ve Cevapları</h4>
<div class="col-md-11 rounded shadow " style="background-color: rgb(250, 250, 250);">
    <div class="p-5">
        <p>@Model.Summary</p>
    </div>
</div>
<h4 class="m-3">Ürün Bilgileri</h4>
<div class="col-md-11 rounded shadow " style="background-color: rgb(250, 250, 250);">
    <div class="p-5">
        <p>@Model.Summary</p>
    </div>
</div>